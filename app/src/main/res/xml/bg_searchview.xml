<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <item
        android:left="5dp"
        android:top="5dp">
        <shape
            android:shape="rectangle">
            <!--設定陰影顏色-->
            <solid
                android:color="#80CCCCCC" />
            <!--設定圓角的尺寸-->
            <corners
                android:radius="20dp"/>
        </shape>
    </item>
    <!--物件部分-->
    <!--設置物件右邊跟下面的offset-->
    <item
        android:bottom="5dp"
        android:right="5dp">
        <shape
            android:shape="rectangle">
            <!--設定形狀的顏色-->
            <solid
                android:color="@color/colorWhite"/>
            <!--設定圓角的尺寸-->
            <corners
                android:radius="20dp"/>
            <!--設定邊框-->
            <stroke
                android:width="2dp"
                android:color="@color/colorWhite"/>
            <!--設定內容與邊界的距離-->
            <padding
                android:top="0dp"
                android:right="15dp"
                android:bottom="0dp"
                android:left="20dp"/>
        </shape>
    </item>
</layer-list>