<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_marginBottom="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvMemeberImg"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:cardCornerRadius="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivMemberImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/beauty" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cvMemeberImg"
        app:layout_constraintStart_toEndOf="@+id/cvMemeberImg"
        app:layout_constraintTop_toTopOf="@+id/cvMemeberImg"
        app:layout_constraintVertical_bias="0.533" />

    <TextView
        android:id="@+id/tvGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cvMemeberImg"
        app:layout_constraintStart_toEndOf="@+id/cvMemeberImg"
        app:layout_constraintTop_toTopOf="@+id/cvMemeberImg"
        app:layout_constraintVertical_bias="0.533" />

    <ImageButton
        android:id="@+id/ibtAgree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="@+id/ibtDecline"
        app:layout_constraintEnd_toStartOf="@+id/ibtDecline"
        app:layout_constraintTop_toTopOf="@+id/ibtDecline"
        app:srcCompat="@drawable/icon_team_agree"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="11dp"/>

    <ImageButton
        android:id="@+id/ibtDecline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#00000000"
        app:srcCompat="@drawable/icon_team_decline"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="11dp" />
</androidx.constraintlayout.widget.ConstraintLayout>