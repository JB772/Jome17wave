<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/no_image" />

    <ImageButton
        android:id="@+id/btPickPicture"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="95dp"
        android:background="@drawable/icon_awesome_camera" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="150dp"
            app:cardBackgroundColor="#FFC532"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_material_title" />

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="給揪團一個標題吧！"
                android:inputType="text" />

            <ImageView
                android:id="@+id/ivDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/icon_date_range" />

            <EditText
                android:id="@+id/etDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="50dp"
                android:clickable="true"
                android:focusable="false"
                android:ems="10"
                android:hint="日期" />

            <Button
                android:background="@color/colorYellow"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="185dp"
                android:layout_marginTop="45dp"
                android:text="日期"
                android:id="@+id/btn_date"
                android:layout_alignBottom="@+id/etDate"
                android:layout_toRightOf="@+id/etDate"
                android:layout_toEndOf="@+id/etDate" />

            <ImageView
                android:id="@+id/ivTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="110dp"
                android:src="@drawable/icon_access_time" />

            <EditText
                android:id="@+id/etTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="100dp"
                android:clickable="true"
                android:focusable="false"
                android:ems="10"
                android:hint="時間" />

            <Button
                android:background="@color/colorYellow"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="時間"
                android:id="@+id/btn_time"
                android:layout_marginLeft="185dp"
                android:layout_marginTop="100dp"
                android:layout_below="@+id/btn_date"
                android:layout_alignLeft="@+id/btn_date"
                android:layout_alignStart="@+id/btn_date" />

            <ImageView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="160dp"
                android:src="@drawable/icon_map_marker_alt" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="165dp"
                android:text="地點"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/SpnLocation"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="160dp"
                android:spinnerMode="dropdown" />

            <ImageView
                android:id="@+id/Gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="210dp"
                android:src="@drawable/icon_friend_add" />

            <TextView
                android:id="@+id/tvGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="210dp"
                android:text="性別"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/SpnGender"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="210dp" />

            <TextView
                android:id="@+id/tvPeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="210dp"
                android:text="人數＿＿人"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="410dp"
        app:cardBackgroundColor="#FFC532"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/edMemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="給團友的話（限50字）"
            android:inputType="text"
             />
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/bt_add"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="540dp"
        android:background="@drawable/bt_check_add" />


</RelativeLayout>
