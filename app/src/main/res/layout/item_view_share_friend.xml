<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="4dp"
    android:background="@drawable/bg"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cvFriendImg"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:cardCornerRadius="18dp"
        android:layout_marginStart="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivCircle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:srcCompat="@drawable/icon_selection_controls_1" />

        <ImageView
            android:id="@+id/ivMemberImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/beauty" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cvFriendImg"
        app:layout_constraintStart_toEndOf="@+id/cvFriendImg"
        app:layout_constraintTop_toTopOf="@+id/cvFriendImg"
        app:layout_constraintVertical_bias="0.533" />

    <TextView
        android:id="@+id/tvGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cvFriendImg"
        app:layout_constraintStart_toEndOf="@+id/cvFriendImg"
        app:layout_constraintTop_toTopOf="@+id/cvFriendImg"
        app:layout_constraintVertical_bias="0.533" />


</androidx.constraintlayout.widget.ConstraintLayout>